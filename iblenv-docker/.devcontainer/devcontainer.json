// For format details, see https://aka.ms/devcontainer.json
{
	"name": "iblenv (devcontainer)",
	"dockerComposeFile": [
		"../docker-compose.yml",
		"../docker-compose-build-local.yml"
	],
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-python.python",
		"mikestead.dotenv"
	],
	"service": "iblenv",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"jupyter.alwaysScrollOnNewCell": true,
		"jupyter.generateSVGPlots": true,
		"jupyter.interactiveWindowMode": "single",
		"jupyter.notebookFileRoot": "${fileDirname}",
		"jupyter.sendSelectionToInteractiveWindow": true
	},
	"shutdownAction": "none",
	"workspaceFolder": "/int-brain-lab",
	"remoteUser": "ubuntu:docker"
}
